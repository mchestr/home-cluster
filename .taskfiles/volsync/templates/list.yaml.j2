---
apiVersion: batch/v1
kind: Job
metadata:
  name: {{ ENV.APP }}-list-snapshots
  namespace: {{ ENV.NS }}
spec:
  ttlSecondsAfterFinished: 3600
  template:
    spec:
      automountServiceAccountToken: false
      restartPolicy: OnFailure
      containers:
        - name: list
          image: docker.io/restic/restic:0.16.2
          args:
            - snapshots
          envFrom:
            - secretRef:
                name: {{ ENV.APP }}-volsync-r2-secret
