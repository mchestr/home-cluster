{
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.hover.delay": 1500,
  "editor.rulers": [
    100
  ],
  "editor.stickyScroll.enabled": false,
  "explorer.autoReveal": false,
  "files.associations": {
    "*.yaml": "yaml"
  },
  "files.trimTrailingWhitespace": true,
  "material-icon-theme.files.associations": {
    // TODO: https://github.com/PKief/vscode-material-icon-theme/issues/330
    "*.sops.env": "lock",
    "*.sops.yaml": "lock"
  },
  "material-icon-theme.folders.associations": {
      // top level
      ".archive": "archive",
      // .github
      ".github/workflows": "robot",
      // namespaces
      "bootstrap": "generator",
      "cert-manager": "guard",
      "default": "home",
      "digester-system": "hook",
      "external-secrets": "secure",
      "flux-system": "pipe",
      "game-system": "intellij",
      "hack": "scripts",
      "kube-system": "kubernetes",
      "kyverno": "admin",
      "monitoring": "event",
      "networking": "connection",
      "openebs-system": "archive",
      "rook-ceph": "base",
      "system-upgrade": "update",
      "talos": "config",
      "volsync-system": "aws"
  },
  "vs-kubernetes": {
    "vs-kubernetes.kubeconfig": "./kubeconfig",
    "vs-kubernetes.knownKubeconfigs": [
      "./kubeconfig"
    ]
  },
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "kubernetes": "./kubernetes/**/*.yaml"
  }
}
