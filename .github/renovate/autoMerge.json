        "matchUpdateTypes": ["minor", "patch"],
        "matchPackageNames": [
          "ghcr.io/k8s-at-home/bazarr",
          "ghcr.io/k8s-at-home/lidarr",
          "ghcr.io/k8s-at-home/readarr"
        ]
      },
      {
