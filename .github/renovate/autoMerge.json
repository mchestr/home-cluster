        "automerge": true,
        "automergeType": "branch",
        "requiredStatusChecks": null,
        "matchUpdateTypes": ["minor", "patch"],
        "matchPackageNames": ["kube-prometheus-stack"]
      },
      {
        "matchManagers": ["github-actions"],
