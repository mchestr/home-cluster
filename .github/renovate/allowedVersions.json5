{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["postgresql", "postgres-backup-local"],
      "allowedVersions": "<17"
    },
    {
      "matchDatasources": ["terraform"],
      "matchPackagePatterns": ["google"],
      "allowedVersions": "<5"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["wordpress"],
      "allowedVersions": "<18"
    }
  ]
}
